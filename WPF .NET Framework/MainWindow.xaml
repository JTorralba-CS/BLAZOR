<Window x:Class="WPF.NET_Framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.NET_Framework"
        mc:Ignorable="d"
        Title="WPF .NET Framework 4.6.2" Height="800" Width="800">
    <Grid Height="800" MinWidth="800" MinHeight="800" Width="800">
        <Label x:Name="Label_User" Content="User" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="TextBox_User" HorizontalAlignment="Left" Margin="125,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Label x:Name="Label_Message" Content="Message" HorizontalAlignment="Left" Margin="50,81,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="TextBox_Message" HorizontalAlignment="Left" Margin="125,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="525"/>
        <Button x:Name="Button_Send" Content="Send" HorizontalAlignment="Left" Margin="55,122,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="0.833,0.854"/>
        <ListBox x:Name="ListBox_Message" d:ItemsSource="{d:SampleData ItemCount=5}" Width="690" Height="550" Margin="55,110,145,-14"/>
    </Grid>
</Window>
